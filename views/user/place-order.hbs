<div class="page-wrapper">
    <div class="checkout shopping">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="block billing-details">
                        <h4 class="widget-title">Shipping Details</h4>
                        <form class="checkout-form" id="checkout-form">
                            <div class="form-group">
                                <label for="user_address">Address</label>
                                <input type="text" class="form-control" required="required" name="address" id="address" placeholder="">
                            </div>
                            <div class="checkout-country-code clearfix">
                                <div class="form-group">
                                    <label for="user_post_code">Pin Code</label>
                                    <input type="text" class="form-control" required="required" name="pincode" id="pincode" value="">
                                </div>
                                <div class="form-group">
                                    <label for="user_city">Mobile no</label>
                                    <input type="text" class="form-control" required="required" name="mobile" id="mobile" value="">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="user_country">Country</label>
                                <input type="text" class="form-control" required="required" id="user_country" placeholder="">
                            </div>
                            <input type="text" name="userid" id="" value="{{user._id}}" hidden>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="product-checkout-details">
                        <div class="block">
                            <h4 class="widget-title">Order Summary</h4>

                            {{#each products}}

                            <div class="media product-card">
                                <a class="pull-left" href="/cart">
                                    <img class="media-object" style="width:80px;"
                                        src="/images/product-images/{{this.product._id}}.jpg" alt="Image" />
                                </a>
                                <div class="media-body">
                                    <h4 class="media-heading"><a href="/cart">{{this.product.name}}</a>
                                    </h4>
                                    <p class="price">{{this.quantity}} x Rs.{{this.product.price}}</p>
                                    {{!-- <span class="remove">Remove</span> --}}
                                </div>
                            </div>
                            {{/each}}

                            <ul class="summary-prices">
                                {{!-- <li>
                                    <span>Subtotal:</span>
                                    <span class="price">$190</span>
                                </li> --}}
                                <li>
                                    <span>Shipping:</span>
                                    <span>Free</span>
                                </li>
                            </ul>
                            <div class="summary-total">
                                <span>Total</span>
                                <span>Rs.{{total}}</span>
                            </div>

                        <div class="payment">
                            <p>Payment Method</p>
                            <label class="radio-inline">
                                <input type="radio" name="payment-method"  value="COD"  checked>COD
                            </label>
                            <label class="radio-inline mt-2">
                                <input type="radio" name="payment-method" value="ONLINE"  id="ONLINE">Online Payment
                            </label>
                            <button type="submit" class="btn btn-primary float-right">Checkout</button>
                        </div>

                            <div class="verified-icon">
                                <img src="images/shop/verified.png">
                            </div>
                        </div>
                    </div>
                </div>
                </form>
            </div>
        </div>
        <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    </div>
</div>
