<section>
    <div class="container">
        <div class="row">
            <a href="/admin/add-products" class="btn btn-success">Add Product</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price(Rs)</th>
                    <th scope="col">Description</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each product}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.stock}}</td>
                    <td><img style="width:50px;height:50px" src="/images/product-images/{{this._id}}.jpg" alt="image"></td>
                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
                    <td><a href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you want to delete {{this.name}}')" class="btn btn-danger">Delete</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>